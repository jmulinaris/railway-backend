<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Ingreso de Productos</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="../../styles/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"
    integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body class="container-home">
    <div class="titulo-home">
        <h1 class="h1-home">
            ¡ Hola <%= username %> ! <br>
            Mail: <%= email %>
        </h1>
        <button class="boton-logout" onclick="location.href='/logout'">
            Desloguear
        </button>
    </div>

    <div>
        <div class="form-productos">
            <h1 class="h1-home">Ingreso de productos</h1>
            <br>

            <form class="part-form" id="formAgregarProducto">
                <!-- Campo nombre del producto -->
                <div class="part-form">
                    <label for="nombre">Nombre</label>
                    <input class="dato-prod" id="title" type="text" name="title" required>
                </div>

                <!-- Campo precio del producto -->
                <div class="part-form">
                    <label for="precio">Precio</label>
                    <input class="dato-prod" id="price" type="number" step="0.01" name="price" required>
                </div>

                <!-- Campo url de la foto del producto -->
                <div class="part-form">
                    <label for="foto">Foto URL</label>
                    <input class="dato-prod" id="thumbnail" type="url" name="thumbnail">
                </div>

                <!-- Botón de envío -->
                <button class="boton-prod">Agregar</button>
            </form>
        </div>

        <div id="productos"></div>

        <div class="form-productos">
            <h1 class="h1-home">Centro de Mensajes
                <span id="porcentaje"></span>
            </h1>
            <div class="part-form-chat">
                <input class="dato-prod" type="text" id="email" placeholder="Ingresá tu email">
                <div id="errorEmail" class="text-error"></div>
                <input class="dato-prod" type="text" id="name" placeholder="Ingresá tu nombre">
                <div id="errorName" class="text-error"></div>
                <input class="dato-prod" type="text" id="lastName" placeholder="Ingresá tu apellido">
                <div id="errorLastName" class="text-error"></div>
                <input class="dato-prod" type="text" id="age" placeholder="Ingresá tu edad">
                <div id="errorAge" class="text-error"></div>
                <input class="dato-prod" type="text" id="alias" placeholder="Ingresá tu alias">
                <div id="errorAlias" class="text-error"></div>
                <input class="dato-prod" type="text" id="avatar" placeholder="Ingresá tu avatar (URL)">
                <div id="errorAvatar" class="text-error"></div>
            </div>

            <div id="mensajes"></div>

            <form id="formPublicarMensaje">
                <input class="dato-prod" id="mensaje" type="text" placeholder="Ingresá un mensaje...">
                <div id="errorMsj" class="text-error"></div>
                <button class="boton-msj" id="enviar" type="submit">Enviar </button>
            </form>
        </div>
    </div>

    <script src="../../index.js" type="module"></script>

    <script>
        setTimeout(() => {
            location.href = '/'
        }, 600000)
    </script>

</body>

</html>